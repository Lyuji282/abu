{
  "name": "abu",
  "version": "0.1.0",
  "description": "Serverless Headless CMS",
  "main": "index.js",
  "repository": "git@github.com:kdcio/abu.git",
  "author": "Ian Dela Cruz <iandc76@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "setup": "./scripts/setup-cog.sh",
    "start:cms": "yarn workspace cms start"
  },
  "devDependencies": {
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "serverless": "^2.31.0",
    "serverless-bundle": "^4.2.2",
    "serverless-offline": "^6.9.0",
    "ts-jest": "^26.5.4",
    "yaml": "^1.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/cms/src/**/*.js": [
      "yarn workspace cms lint",
      "pretty-quick --staged"
    ]
  },
  "workspaces": [
    "packages/*",
    "resources"
  ]
}